<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>
	<!-- TODOPROJECT -->
	<!-- 服务器系统入口 -->
	<package name="safetyCheck" namespace="/safety_check" extends="default">

		<!-- 分页获取项目安全检查项列表 -->
		<action name="pageSafetyCheckItem" class="top.warmheart.workerunion.pm.server.action.SafetyCheckAction" method="pageItem">
			<result type="stream">
				<param name="contentType">text/html</param>
				<param name="inputName">inputStream</param>
			</result>
		</action>
		<!-- 获取安全检查记录详情 -->
		<action name="getSafetyCheckItemDetail" class="top.warmheart.workerunion.pm.server.action.SafetyCheckAction"
			method="getItemDetail">
			<result type="stream">
				<param name="contentType">text/html</param>
				<param name="inputName">inputStream</param>
			</result>
		</action>
		<!-- 申请审批安全检查记录 -->
		<action name="applySafetyCheckItemVerify" class="top.warmheart.workerunion.pm.server.action.SafetyCheckAction"
			method="applyItemVerify">
			<result type="stream">
				<param name="contentType">text/html</param>
				<param name="inputName">inputStream</param>
			</result>
		</action>

		<!-- 删除记录下的附件 -->
		<action name="removeSafetyCheckItemAttachmentById" class="top.warmheart.workerunion.pm.server.action.SafetyCheckAction"
			method="removeAttachmentById">
			<result type="stream">
				<param name="contentType">text/html</param>
				<param name="inputName">inputStream</param>
			</result>
		</action>
	</package>
</struts>
